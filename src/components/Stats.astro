---
let date = new Date().toLocaleString('en-AU', {
  year: 'numeric',
  month: 'short',
  day: '2-digit'
})
---

<div class="flex flex-wrap">
  <div class="mt-4 w-full lg:w-6/12 xl:w-6/12 px-5 mb-1">
    <div
      class="relative flex flex-col min-w-0 break-words bg-white rounded mb-3 xl:mb-0 shadow-lg"
    >
      <div class="flex-auto p-4">
        <div class="flex flex-wrap">
          <div class="relative w-full pr-4 max-w-full flex-grow flex-1">
            <h5 class="text-blueGray-400 uppercase font-semibold text-xs">
              30-day Active Users
            </h5>
            <span class="font-semibold text-xl text-orange-800"
              >STAT_ACTIVE_USERS</span
            >
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-4 w-full lg:w-6/12 xl:w-6/12 px-5">
    <div
      class="relative flex flex-col min-w-0 break-words bg-white rounded mb-4 xl:mb-0 shadow-lg"
    >
      <div class="flex-auto p-4">
        <div class="flex flex-wrap">
          <div class="relative w-full pr-4 max-w-full flex-grow flex-1">
            <h5 class="text-blueGray-400 uppercase font-semibold text-xs">
              30-day Page Views
            </h5>
            <span class="font-semibold text-xl text-orange-800"
              >STAT_PAGEVIEWS</span
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<p class="text-xs text-right italic mr-2 mb-3">last updated: {date}</p>

<style>
  div.site-stats {
    @apply my-4;
  }
</style>
