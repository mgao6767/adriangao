---
export interface Props {
  name: string
}
const { name } = Astro.props
const url = 'location.href="/tags/' + name + '"'
---

<button
  class="m-1 rounded py-0 px-1 border border-transparent bg-gray-200 w-100 hover:bg-orange-900 hover:border-orange-900 hover:text-gray-100 transition ease-in-out duration-200"
  onclick={url}>{name}</button
>
